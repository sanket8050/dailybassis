generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id
  name       String
  email      String   @unique
  password   String
  role       Role     @default(USER)
  attending  Boolean  @default(false)
  isRegular  Boolean  @default(false)
  lastUpdate DateTime @default(now())
}

model Meal {
  date        DateTime @unique
  description String?
  id          String   @id
}

enum Role {
  USER
  ADMIN
}
